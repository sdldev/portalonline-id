        <div class="chat-header-text">
            <h4 class="font-display">Chat WhatsApp</h4>
            <p>Kami siap membantu Anda</p>
        </div>
    </div>

    <form class="chat-form" id="chat-form">
        <div class="form-field">
            <label for="sender-name">Nama Anda</label>
            <input
                type="text"
                id="sender-name"
                name="sender"
                required
                placeholder="Masukkan nama Anda"
            />
        </div>
        <div class="form-field">
            <label for="message-content">Pesan</label>
            <textarea
                id="message-content"
                name="message"
                rows="3"
                required
                placeholder="Tulis pesan Anda..."></textarea>
        </div>
        <button type="submit" class="btn btn-whatsapp">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="m22 2-7 20-4-9-9-4 20-7Z"></path>
                <path d="M22 2 11 13"></path>
            </svg>
            Kirim ke WhatsApp
        </button>
    </form>
</div>

<style>
    /* Floating Action Button */
    .chat-fab {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3.5rem;
        height: 3.5rem;
        background: linear-gradient(
            135deg,
            rgb(var(--color-primary)),
            rgb(var(--color-accent))
        );
        border-radius: 50%;
        color: white;
        cursor: pointer;
        box-shadow:
            0 4px 20px rgba(var(--color-primary), 0.4),
            0 0 40px rgba(var(--color-primary), 0.2);
        transition: all var(--transition-base);
    }

    .chat-fab:hover {
        transform: scale(1.1);
        box-shadow:
            0 6px 30px rgba(var(--color-primary), 0.5),
            0 0 50px rgba(var(--color-primary), 0.3);
    }

    .chat-fab:active {
        transform: scale(0.95);
    }

    .chat-fab.active {
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
    }

    /* Chat Widget Panel */
    .chat-widget {
        position: fixed;
        bottom: 6rem;
        right: 2rem;
        z-index: 999;
        width: 340px;
        max-width: calc(100vw - 2rem);
        border-radius: 1.5rem;
        overflow: hidden;
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px) scale(0.95);
        transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .chat-widget.open {
        opacity: 1;
        visibility: visible;
        transform: translateY(0) scale(1);
    }

    /* Header */
    .chat-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.25rem;
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary), 0.1),
            rgba(var(--color-accent), 0.05)
        );
        border-bottom: 1px solid var(--color-border);
    }

    .chat-header-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.75rem;
        height: 2.75rem;
        background: #25d366;
        border-radius: 0.75rem;
        color: white;
    }

    .chat-header-text h4 {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 0.125rem;
    }

    .chat-header-text p {
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    /* Form */
    .chat-form {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .chat-form .form-field {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
    }

    .chat-form label {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
    }

    .chat-form input,
    .chat-form textarea {
        padding: 0.75rem 1rem;
        font-family: inherit;
        font-size: 0.875rem;
        color: var(--color-text);
        background: var(--color-bg-secondary);
        border: 1px solid var(--color-border);
        border-radius: 0.75rem;
        outline: none;
        transition:
            border-color var(--transition-fast),
            box-shadow var(--transition-fast);
        resize: none;
    }

    .chat-form input::placeholder,
    .chat-form textarea::placeholder {
        color: var(--color-text-subtle);
    }

    .chat-form input:focus,
    .chat-form textarea:focus {
        border-color: rgb(var(--color-primary));
        box-shadow: 0 0 0 3px rgba(var(--color-primary), 0.1);
    }

    /* WhatsApp Button */
    .btn-whatsapp {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        background: #25d366;
        color: white;
        font-weight: 700;
        font-size: 0.875rem;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all var(--transition-base);
        margin-top: 0.5rem;
    }

    .btn-whatsapp:hover {
        background: #20bd5a;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(37, 211, 102, 0.3);
    }

    .btn-whatsapp:active {
        transform: scale(0.98);
    }

    /* Mobile adjustments */
    @media (max-width: 480px) {
        .chat-fab {
            bottom: 1.5rem;
            right: 1.5rem;
        }

        .chat-widget {
            bottom: 5.5rem;
            right: 1rem;
            left: 1rem;
            width: auto;
            max-width: none;
        }
    }
</style>

<script is:inline define:vars={{ whatsappNumber }}>
    (function () {
        // Track if already initialized to prevent duplicates
        if (window.__chatWidgetInitialized) return;
        window.__chatWidgetInitialized = true;

        function setupChatWidget() {
            const chatFab = document.getElementById("chat-fab");
            const chatWidget = document.getElementById("chat-widget");
            const chatForm = document.getElementById("chat-form");

            if (!chatFab || !chatWidget || !chatForm) return;

            const chatIcon = chatFab.querySelector(".chat-icon");
            const closeIcon = chatFab.querySelector(".close-icon");

            function toggleWidget(forceClose = false) {
                const shouldOpen = forceClose
                    ? false
                    : !chatWidget.classList.contains("open");

                chatWidget.classList.toggle("open", shouldOpen);
                chatFab.classList.toggle("active", shouldOpen);

                if (chatIcon && closeIcon) {
                    chatIcon.style.display = shouldOpen ? "none" : "block";
                    closeIcon.style.display = shouldOpen ? "block" : "none";
                }
            }

            function closeWidget() {
                toggleWidget(true);
            }

            // FAB click handler
            chatFab.onclick = function (e) {
                e.stopPropagation();
                toggleWidget();
            };

            // Prevent clicks inside widget from closing it
            chatWidget.onclick = function (e) {
                e.stopPropagation();
            };

            // Form submission
            chatForm.onsubmit = function (e) {
                e.preventDefault();

                const senderInput = document.getElementById("sender-name");
                const messageInput = document.getElementById("message-content");

                const sender = senderInput?.value?.trim();
                const message = messageInput?.value?.trim();

                if (sender && message) {
                    // Format message for WhatsApp
                    const waMessage = "Saya " + sender + ", " + message;
                    const encodedMessage = encodeURIComponent(waMessage);

                    // Open WhatsApp
                    window.open(
                        "https://wa.me/" +
                            whatsappNumber +
                            "?text=" +
                            encodedMessage,
                        "_blank",
                    );

                    // Reset and close
                    chatForm.reset();
                    closeWidget();
                }
            };

            // Close on outside click
            document.addEventListener("click", function (e) {
                const isClickInsideWidget = e.target.closest("#chat-widget");
                const isClickOnFab = e.target.closest("#chat-fab");

                if (
                    !isClickInsideWidget &&
                    !isClickOnFab &&
                    chatWidget.classList.contains("open")
                ) {
                    closeWidget();
                }
            });
        }

        // Initialize on DOM ready
        if (document.readyState === "loading") {
            document.addEventListener("DOMContentLoaded", setupChatWidget);
        } else {
            setupChatWidget();
        }

        // Re-setup after View Transitions (elements get replaced)
        document.addEventListener("astro:after-swap", function () {
            window.__chatWidgetInitialized = false;
            setupChatWidget();
            window.__chatWidgetInitialized = true;
        });
    })();
</script>
