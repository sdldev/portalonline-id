---
// WhatsApp number (replace with actual number)
const whatsappNumber = "62887437498095"; // Format: country code + number without + or spaces
---

<!-- Floating Chat Button -->
<button class="chat-fab" id="chat-fab" aria-label="Hubungi via WhatsApp">
    <svg
        class="chat-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
        ></path>
    </svg>
    <svg
        class="close-icon"
        style="display: none;"
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M18 6 6 18"></path>
        <path d="m6 6 12 12"></path>
    </svg>
</button>

<!-- Chat Widget Panel -->
