<script>
    function positionOrbitItems() {
        const container = document.querySelector(
            ".orbit-container",
        ) as HTMLElement;
        if (!container) return;

        const containerRect = container.getBoundingClientRect();
        const centerX = containerRect.width / 2;
        const centerY = containerRect.height / 2;

        // Two radii for the two node sizes
        const outerRadius = containerRect.width * 0.43;
        const midRadius = containerRect.width * 0.3;

        // Position big nodes (6 items, 60° apart, starting from top)
        const bigItems = container.querySelectorAll(".orbit-item-big");
        bigItems.forEach((item, i) => {
            const el = item as HTMLElement;
            const angle = (i * 60 - 90) * (Math.PI / 180);
            const x = centerX + Math.cos(angle) * outerRadius;
            const y = centerY + Math.sin(angle) * outerRadius;
            el.style.left = x + "px";
            el.style.top = y + "px";
            el.style.transform = "translate(-50%, -50%)";
        });

        // Position small nodes (6 items, 60° apart, offset by 30° from big)
        const smallItems = container.querySelectorAll(".orbit-item-small");
        smallItems.forEach((item, i) => {
            const el = item as HTMLElement;
            const angle = (i * 60 - 90 + 30) * (Math.PI / 180);
            const x = centerX + Math.cos(angle) * midRadius;
            const y = centerY + Math.sin(angle) * midRadius;
            el.style.left = x + "px";
            el.style.top = y + "px";
            el.style.transform = "translate(-50%, -50%)";
        });

        // Draw connection lines from center to ALL nodes
        const svgEl = document.getElementById("orbitLines");
        if (svgEl) {
            svgEl.innerHTML = "";
            const mainItems = container.querySelectorAll(
                ".orbit-item-big, .orbit-item-small",
            );
            mainItems.forEach((item) => {
                const el = item as HTMLElement;
                const ix = parseFloat(el.style.left);
                const iy = parseFloat(el.style.top);

                const line = document.createElementNS(
                    "http://www.w3.org/2000/svg",
                    "line",
                );
                line.setAttribute("x1", String(centerX));
                line.setAttribute("y1", String(centerY));
                line.setAttribute("x2", String(ix));
                line.setAttribute("y2", String(iy));
                line.classList.add("orbit-line");
                svgEl.appendChild(line);
            });
        }
    }

    function initOrbit() {
        // Run on load and resize
        positionOrbitItems();
        window.addEventListener("resize", positionOrbitItems);

        // Subtle floating animation for orbit items
        const orbitNodes = document.querySelectorAll(".orbit-node");
        orbitNodes.forEach((node, i) => {
            const el = node as HTMLElement;
            const duration = 3 + Math.random() * 2;
            const delay = i * 0.3;
            el.style.animation = `orbit-float ${duration}s ${delay}s ease-in-out infinite`;
        });

        // Add the float keyframe dynamically
        if (!document.getElementById("orbit-float-style")) {
            const style = document.createElement("style");
            style.id = "orbit-float-style";
            style.textContent = `
                @keyframes orbit-float {
                    0%, 100% { transform: translateY(0) scale(1); }
                    50% { transform: translateY(-6px) scale(1.02); }
                }
            `;
            document.head.appendChild(style);
        }
    }

    // Jalankan saat navigasi Astro (View Transitions) atau load biasa
    document.addEventListener("astro:page-load", initOrbit);
    // Fallback untuk non-View Transitions
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initOrbit);
    } else {
        initOrbit();
    }
</script>
