---
const tabs = [
    {
        id: "articles",
        title: "Manajemen Artikel",
        description:
            "Kelola semua artikel dari satu dashboard. Editor WYSIWYG, penjadwalan publikasi, dan status approval.",
    },
    {
        id: "analytics",
        title: "Analitik & Statistik",
        description:
            "Pantau performa artikel, traffic pengunjung, dan engagement pembaca dengan data real-time.",
    },
    {
        id: "users",
        title: "Tim & Kolaborasi",
        description:
            "Kelola Tim Developer dengan role management. Assign tugas dan workflow approval otomatis.",
    },
];

const articleRows = [
    {
        title: "Ekonomi Indonesia Q4 2025",
        status: "Published",
        views: "12,450",
        date: "6 Jan",
    },
    {
        title: "Teknologi AI Terbaru",
        status: "Draft",
        views: "-",
        date: "5 Jan",
    },
    {
        title: "Update Kebijakan Pemerintah",
        status: "Published",
        views: "8,230",
        date: "5 Jan",
    },
    {
        title: "Olahraga: Liga 1 Indonesia",
        status: "Review",
        views: "-",
        date: "4 Jan",
    },
];

const analyticsRows = [
    { metric: "Total Pageviews", value: "1,245,890", change: "+12.5%" },
    { metric: "Unique Visitors", value: "342,150", change: "+8.3%" },
    { metric: "Avg. Read Time", value: "3m 42s", change: "+15.2%" },
    { metric: "Bounce Rate", value: "32.4%", change: "-5.1%" },
];

const userRows = [
    { name: "Ahmad Rizky", role: "Editor", articles: "45", status: "Aktif" },
    {
        name: "Siti Nurhaliza",
        role: "Penulis",
        articles: "128",
        status: "Aktif",
    },
    { name: "Budi Santoso", role: "Admin", articles: "-", status: "Aktif" },
    { name: "Maya Putri", role: "Penulis", articles: "87", status: "Aktif" },
];
---

<section class="section dashboard-section">
    <div class="container">
        <div class="section-header">
            <span class="badge">Dashboard Preview</span>
            <h2 class="section-title">
                <span class="text-gradient">Dashboard</span> Portal Online
            </h2>
            <p class="section-subtitle">
                Dirancang khusus berdasarkan pengalaman bertahun-tahun dan di
                buat simple, untuk memberikan pengalaman pengelolaan konten yang
                efisien dan menyenangkan.
            </p>
        </div>

        <div class="dashboard-showcase">
            <!-- Mobile: Pill Tabs -->
            <div class="mobile-tabs">
                <span class="tabs-label">Pilih Fitur:</span>
                <div class="pill-tabs">
                    {
                        tabs.map((tab, index) => (
                            <button
                                class={`pill-tab ${index === 0 ? "active" : ""}`}
                                data-tab={tab.id}
                                type="button"
                            >
                                {tab.title}
                            </button>
                        ))
                    }
                </div>
            </div>

            <!-- Desktop: Full Tabs with Description -->
            <div class="tabs-container">
                {
                    tabs.map((tab, index) => (
                        <button
                            class={`tab-item ${index === 0 ? "active" : ""}`}
                            data-tab={tab.id}
                            type="button"
                        >
                            <h4 class="tab-title">{tab.title}</h4>
                            <p class="tab-desc">{tab.description}</p>
                        </button>
                    ))
                }
            </div>

            <!-- Right: Dashboard Preview -->
            <div class="preview-container">
                <div class="browser-bar">
                    <div class="browser-dots">
                        <span class="dot red"></span>
                        <span class="dot yellow"></span>
                        <span class="dot green"></span>
                    </div>
                    <div class="browser-url">dashboard.portalonline.id</div>
                </div>

                <div class="dashboard-content">
                    <!-- Sidebar - Hidden on mobile for LCP -->
                    <aside class="dash-sidebar">
                        <div class="dash-logo">
                            <div class="logo-icon-small">P</div>
                            <span
                                >Portal<span class="text-accent">Online</span
                                ></span
                            >
                        </div>
                        <nav class="dash-nav">
                            <a
                                href="#"
                                class="nav-item active"
                                data-nav="articles"
                            >
                                <svg
                                    width="14"
                                    height="14"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    ><path
                                        d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
                                    ></path></svg
                                >
                                Artikel
                            </a>
                            <a href="#" class="nav-item" data-nav="analytics">
                                <svg
                                    width="14"
                                    height="14"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    ><path d="M3 3v18h18"></path><path
                                        d="m19 9-5 5-4-4-3 3"></path></svg
                                >
                                Analitik
                            </a>
                            <a href="#" class="nav-item" data-nav="users">
                                <svg
                                    width="14"
                                    height="14"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    ><path
                                        d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"
                                    ></path><circle cx="9" cy="7" r="4"
                                    ></circle></svg
                                >
                                Tim
                            </a>
                        </nav>
                    </aside>

                    <!-- Main Content -->
                    <div class="dash-main">
                        <!-- Articles Panel -->
                        <div class="dash-panel" id="panel-articles">
                            <h3 class="panel-title">Artikel Terbaru</h3>
                            <div class="table-wrapper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Judul</th>
                                            <th>Status</th>
                                            <th class="hide-mobile">Views</th>
                                            <th class="hide-mobile">Tanggal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {
                                            articleRows.map((row) => (
                                                <tr>
                                                    <td class="title-cell">
                                                        {row.title}
                                                    </td>
                                                    <td>
                                                        <span
                                                            class={`badge-status ${row.status.toLowerCase()}`}
                                                        >
                                                            {row.status}
                                                        </span>
                                                    </td>
                                                    <td class="hide-mobile">
                                                        {row.views}
                                                    </td>
                                                    <td class="hide-mobile">
                                                        {row.date}
                                                    </td>
                                                </tr>
                                            ))
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Analytics Panel -->
                        <div class="dash-panel hidden" id="panel-analytics">
                            <h3 class="panel-title">Statistik Bulan Ini</h3>
                            <div class="table-wrapper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Metrik</th>
                                            <th>Nilai</th>
                                            <th>Perubahan</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {
                                            analyticsRows.map((row) => (
                                                <tr>
                                                    <td>{row.metric}</td>
                                                    <td class="value-cell">
                                                        {row.value}
                                                    </td>
                                                    <td
                                                        class={
                                                            row.change.startsWith(
                                                                "+",
                                                            )
                                                                ? "positive"
                                                                : "negative"
                                                        }
                                                    >
                                                        {row.change}
                                                    </td>
                                                </tr>
                                            ))
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Users Panel -->
                        <div class="dash-panel hidden" id="panel-users">
                            <h3 class="panel-title">Tim Developer</h3>
                            <div class="table-wrapper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Nama</th>
                                            <th>Role</th>
                                            <th class="hide-mobile">Artikel</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {
                                            userRows.map((row) => (
                                                <tr>
                                                    <td>{row.name}</td>
                                                    <td>{row.role}</td>
                                                    <td class="hide-mobile">
                                                        {row.articles}
                                                    </td>
                                                    <td>
                                                        <span
                                                            class={`badge-status ${row.status.toLowerCase()}`}
                                                        >
                                                            {row.status}
                                                        </span>
                                                    </td>
                                                </tr>
                                            ))
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .dashboard-section {
        position: relative;
        contain: layout style;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header .badge {
        margin-bottom: 1rem;
    }

    .section-header .section-subtitle {
        margin: 1rem auto 0;
    }

    .dashboard-showcase {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @media (min-width: 1024px) {
        .dashboard-showcase {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 2rem;
            align-items: start;
        }
    }

    /* Mobile Pill Tabs */
    .mobile-tabs {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    @media (min-width: 1024px) {
        .mobile-tabs {
            display: none;
        }
    }

    .tabs-label {
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .pill-tabs {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding-bottom: 0.25rem;
        scrollbar-width: none;
    }

    .pill-tabs::-webkit-scrollbar {
        display: none;
    }

    .pill-tab {
        flex: 0 0 auto;
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
        background: rgba(var(--color-bg-secondary-rgb, 30, 30, 40), 0.6);
        border: 1px solid var(--color-border);
        border-radius: 9999px;
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.2s;
    }

    .pill-tab:hover {
        background: rgba(var(--color-primary), 0.1);
        border-color: rgba(var(--color-primary), 0.3);
    }

    .pill-tab.active {
        background: linear-gradient(
            135deg,
            rgb(var(--color-primary)),
            rgb(var(--color-accent))
        );
        border-color: transparent;
        color: white;
    }

    /* Desktop Full Tabs - Hidden on mobile */
    .tabs-container {
        display: none;
    }

    @media (min-width: 1024px) {
        .tabs-container {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
    }

    .tab-item {
        flex: 0 0 auto;
        min-width: 200px;
        text-align: left;
        padding: 1rem;
        background: rgba(var(--color-bg-secondary-rgb, 30, 30, 40), 0.5);
        border: 1px solid var(--color-border);
        border-radius: 0.75rem;
        cursor: pointer;
        scroll-snap-align: start;
        transition:
            background 0.2s,
            border-color 0.2s;
    }

    @media (min-width: 1024px) {
        .tab-item {
            min-width: auto;
            padding: 1.25rem;
        }
    }

    .tab-item:hover {
        background: rgba(var(--color-primary), 0.05);
    }

    .tab-item.active {
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary), 0.1),
            rgba(var(--color-accent), 0.05)
        );
        border-color: rgba(var(--color-primary), 0.3);
    }

    .tab-title {
        font-family: var(--font-display);
        font-size: 0.875rem;
        font-weight: 700;
        margin-bottom: 0.375rem;
        color: var(--color-text);
        transition: color 0.2s;
    }

    .tab-item.active .tab-title {
        color: rgb(var(--color-primary));
    }

    .tab-desc {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Preview Container */
    .preview-container {
        background: rgba(var(--color-bg-secondary-rgb, 20, 20, 30), 0.6);
        border: 1px solid var(--color-border);
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .browser-bar {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.625rem 1rem;
        background: rgba(0, 0, 0, 0.4);
        border-bottom: 1px solid var(--color-border);
    }

    .browser-dots {
        display: flex;
        gap: 6px;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }

    .dot.red {
        background: #ff5f57;
    }
    .dot.yellow {
        background: #ffbd2e;
    }
    .dot.green {
        background: #28ca42;
    }

    .browser-url {
        flex: 1;
        text-align: center;
        font-size: 0.6875rem;
        color: var(--color-text-subtle);
        background: rgba(255, 255, 255, 0.05);
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
    }

    /* Dashboard Content */
    .dashboard-content {
        display: flex;
        min-height: 280px;
    }

    @media (min-width: 768px) {
        .dashboard-content {
            min-height: 320px;
        }
    }

    .dash-sidebar {
        display: none;
        width: 140px;
        padding: 0.75rem;
        background: rgba(0, 0, 0, 0.2);
        border-right: 1px solid var(--color-border);
        flex-shrink: 0;
    }

    @media (min-width: 768px) {
        .dash-sidebar {
            display: block;
        }
    }

    .dash-logo {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.6875rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .logo-icon-small {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 1.5rem;
        height: 1.5rem;
        background: linear-gradient(
            135deg,
            rgb(var(--color-primary)),
            rgb(var(--color-accent))
        );
        border-radius: 4px;
        color: white;
        font-size: 0.625rem;
        font-weight: 800;
    }

    .text-accent {
        color: rgb(var(--color-primary));
    }

    .dash-nav {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.5rem;
        font-size: 0.6875rem;
        color: var(--color-text-muted);
        border-radius: 4px;
        transition:
            background 0.15s,
            color 0.15s;
    }

    .nav-item:hover,
    .nav-item.active {
        background: rgba(var(--color-primary), 0.1);
        color: rgb(var(--color-primary));
    }

    .nav-item svg {
        flex-shrink: 0;
    }

    /* Main Panel */
    .dash-main {
        flex: 1;
        padding: 0.75rem;
        overflow: hidden;
    }

    @media (min-width: 768px) {
        .dash-main {
            padding: 1rem;
        }
    }

    .dash-panel {
        height: 100%;
    }

    .dash-panel.hidden {
        display: none;
    }

    .panel-title {
        font-family: var(--font-display);
        font-size: 0.8125rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    table {
        width: 100%;
        font-size: 0.6875rem;
        border-collapse: collapse;
    }

    th {
        text-align: left;
        padding: 0.375rem 0.5rem;
        color: var(--color-text-muted);
        font-weight: 600;
        border-bottom: 1px solid var(--color-border);
        white-space: nowrap;
    }

    td {
        padding: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        white-space: nowrap;
    }

    .title-cell {
        max-width: 140px;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @media (min-width: 768px) {
        .title-cell {
            max-width: none;
        }
    }

    .hide-mobile {
        display: none;
    }

    @media (min-width: 640px) {
        .hide-mobile {
            display: table-cell;
        }
    }

    .badge-status {
        display: inline-block;
        padding: 0.125rem 0.375rem;
        font-size: 0.5625rem;
        font-weight: 600;
        border-radius: 9999px;
        text-transform: capitalize;
    }

    .badge-status.published,
    .badge-status.aktif {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
    }

    .badge-status.draft {
        background: rgba(100, 100, 120, 0.3);
        color: #9ca3af;
    }

    .badge-status.review,
    .badge-status.pending {
        background: rgba(251, 191, 36, 0.2);
        color: #fbbf24;
    }

    .value-cell {
        font-weight: 600;
        color: var(--color-text);
    }

    .positive {
        color: #22c55e;
    }

    .negative {
        color: #ef4444;
    }
</style>

<script is:inline>
    (function () {
        function initDashboardTabs() {
            const desktopTabs = document.querySelectorAll(
                ".tab-item[data-tab]",
            );
            const mobileTabs = document.querySelectorAll(".pill-tab[data-tab]");
            const navItems = document.querySelectorAll(".nav-item[data-nav]");
            const panels = document.querySelectorAll(".dash-panel");

            if (!panels.length) return;

            function switchTab(tabId) {
                // Sync desktop tabs
                desktopTabs.forEach((t) =>
                    t.classList.toggle("active", t.dataset.tab === tabId),
                );
                // Sync mobile tabs
                mobileTabs.forEach((t) =>
                    t.classList.toggle("active", t.dataset.tab === tabId),
                );
                // Sync sidebar nav
                navItems.forEach((n) =>
                    n.classList.toggle("active", n.dataset.nav === tabId),
                );
                // Switch panels
                panels.forEach((p) => {
                    const id = p.id.replace("panel-", "");
                    p.classList.toggle("hidden", id !== tabId);
                });
            }

            desktopTabs.forEach((tab) => {
                tab.onclick = () => switchTab(tab.dataset.tab);
            });

            mobileTabs.forEach((tab) => {
                tab.onclick = () => switchTab(tab.dataset.tab);
            });

            navItems.forEach((item) => {
                item.onclick = (e) => {
                    e.preventDefault();
                    switchTab(item.dataset.nav);
                };
            });
        }

        if (document.readyState === "loading") {
            document.addEventListener("DOMContentLoaded", initDashboardTabs);
        } else {
            initDashboardTabs();
        }

        document.addEventListener("astro:page-load", initDashboardTabs);
    })();
</script>
