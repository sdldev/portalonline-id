---
const themes = [
    {
        name: "Standard",
        image: "https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=400&h=300&fit=crop",
        category: "Berita",
    },
    {
        name: "Premium",
        image: "https://images.unsplash.com/photo-1585829365295-ab7cd400c167?w=400&h=300&fit=crop",
        category: "Pro, Enterprise",
    },
    {
        name: "Premium",
        image: "https://images.unsplash.com/photo-1518770660439-4636190af475?w=400&h=300&fit=crop",
        category: "Pro, Enterprise",
    },
    {
        name: "Premium",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400&h=300&fit=crop",
        category: "Pro, Enterprise",
    },
];
---

<section class="section theme-gallery">
    <div class="container">
        <div class="section-header">
            <span class="badge">Tema Premium</span>
            <h2 class="section-title">
                Pilih <span class="text-gradient">Tema</span> Favorit
            </h2>
            <p class="section-subtitle">
                Berbagai tema profesional siap pakai untuk portal berita Anda.
            </p>
        </div>

        <div class="themes-grid">
            {
                themes.map((theme) => (
                    <div class="theme-card">
                        <div class="theme-image">
                            <img
                                src={theme.image}
                                alt={theme.name}
                                width="400"
                                height="300"
                                loading="lazy"
                                decoding="async"
                            />
                            <div class="theme-overlay">
                                <span class="preview-btn">Preview</span>
                            </div>
                        </div>
                        <div class="theme-info">
                            <span class="theme-category">{theme.category}</span>
                            <h4 class="theme-name">{theme.name}</h4>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="gallery-cta">
            <a href="/themes" class="btn btn-secondary">
                Lihat Semua Tema
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .theme-gallery {
        position: relative;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header .badge {
        margin-bottom: 1rem;
    }

    .section-header .section-subtitle {
        margin: 1rem auto 0;
    }

    .themes-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    @media (min-width: 768px) {
        .themes-grid {
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
        }
    }

    .theme-card {
        border-radius: 0.75rem;
        overflow: hidden;
        background: rgba(var(--color-bg-secondary-rgb, 20, 20, 30), 0.5);
        border: 1px solid var(--color-border);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }

    .theme-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    }

    .theme-image {
        position: relative;
        aspect-ratio: 4/3;
        overflow: hidden;
    }

    .theme-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .theme-card:hover .theme-image img {
        transform: scale(1.05);
    }

    .theme-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 0.2s;
    }

    .theme-card:hover .theme-overlay {
        opacity: 1;
    }

    .preview-btn {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        background: white;
        color: #111;
        border-radius: 9999px;
    }

    .theme-info {
        padding: 0.75rem;
    }

    .theme-category {
        font-size: 0.625rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: rgb(var(--color-primary));
    }

    .theme-name {
        font-family: var(--font-display);
        font-size: 0.875rem;
        font-weight: 700;
        margin-top: 0.25rem;
    }

    .gallery-cta {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }
</style>
