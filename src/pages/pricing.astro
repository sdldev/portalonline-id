---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const plans = [
    {
        name: "Gratis",
        price: "0",
        period: "selamanya",
        description: "Akses dasar ke berita terkini",
        featured: false,
        features: [
            { text: "Akses berita umum", included: true },
            { text: "5 artikel per hari", included: true },
            { text: "Iklan terbatas", included: true },
            { text: "Berita eksklusif", included: false },
            { text: "Konten premium", included: false },
            { text: "Newsletter harian", included: false },
        ],
        cta: "Mulai Gratis",
    },
    {
        name: "Premium",
        price: "49.000",
        period: "per bulan",
        description: "Pengalaman membaca tanpa batas",
        featured: true,
        features: [
            { text: "Akses semua berita", included: true },
            { text: "Artikel unlimited", included: true },
            { text: "Tanpa iklan", included: true },
            { text: "Berita eksklusif", included: true },
            { text: "Konten premium", included: true },
            { text: "Newsletter harian", included: true },
        ],
        cta: "Berlangganan",
    },
    {
        name: "Enterprise",
        price: "Custom",
        period: "hubungi kami",
        description: "Solusi untuk bisnis dan korporasi",
        featured: false,
        features: [
            { text: "Semua fitur Premium", included: true },
            { text: "Multi-user access", included: true },
            { text: "API access", included: true },
            { text: "Custom integrations", included: true },
            { text: "Dedicated support", included: true },
            { text: "Analytics dashboard", included: true },
        ],
        cta: "Hubungi Sales",
    },
];

const faqs = [
    {
        q: "Bagaimana cara berlangganan Premium?",
        a: "Klik tombol 'Berlangganan' di paket Premium, lalu ikuti proses pembayaran menggunakan kartu kredit, transfer bank, atau e-wallet.",
    },
    {
        q: "Apakah bisa membatalkan langganan?",
        a: "Ya, Anda dapat membatalkan langganan kapan saja melalui halaman pengaturan akun. Akses Premium tetap berlaku hingga akhir periode billing.",
    },
    {
        q: "Apa keuntungan paket Premium?",
        a: "Paket Premium memberikan akses unlimited ke semua artikel, bebas iklan, konten eksklusif, dan newsletter khusus harian.",
    },
    {
        q: "Apakah ada uji coba gratis?",
        a: "Ya! Kami menyediakan uji coba gratis 7 hari untuk paket Premium. Tidak ada biaya jika dibatalkan sebelum masa uji coba berakhir.",
    },
];
---

<Layout title="Harga & Paket | Portal Online">
    <Navbar />

    <main class="page-content">
        <!-- Hero Section -->
        <section class="page-hero">
            <div class="container">
                <span class="badge">Harga & Paket</span>
                <h1 class="page-title font-display">
                    Pilih Paket<br />
                    <span class="text-gradient">Sesuai Kebutuhan</span>
                </h1>
                <p class="page-subtitle">
                    Dapatkan akses penuh ke berita berkualitas dengan harga
                    terjangkau. Mulai gratis, upgrade kapan saja.
                </p>
            </div>
        </section>

        <!-- Pricing Cards -->
        <section class="section pricing-section">
            <div class="container">
                <div class="pricing-grid">
                    {
                        plans.map((plan, index) => (
                            <div
                                class={`pricing-card glass ${plan.featured ? "featured" : ""}`}
                                style={`animation-delay: ${index * 100}ms`}
                            >
                                {plan.featured && (
                                    <div class="featured-badge">Populer</div>
                                )}
                                <div class="pricing-header">
                                    <h3 class="plan-name">{plan.name}</h3>
                                    <p class="plan-desc">{plan.description}</p>
                                </div>
                                <div class="pricing-price">
                                    {plan.price !== "Custom" && (
                                        <span class="currency">Rp</span>
                                    )}
                                    <span class="amount font-display">
                                        {plan.price}
                                    </span>
                                    <span class="period">/{plan.period}</span>
                                </div>
                                <ul class="pricing-features">
                                    {plan.features.map((feature) => (
                                        <li
                                            class={
                                                feature.included
                                                    ? ""
                                                    : "disabled"
                                            }
                                        >
                                            {feature.included ? (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="18"
                                                    height="18"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    class="check-icon"
                                                >
                                                    <polyline points="20 6 9 17 4 12" />
                                                </svg>
                                            ) : (
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="18"
                                                    height="18"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    class="x-icon"
                                                >
                                                    <path d="M18 6 6 18" />
                                                    <path d="m6 6 12 12" />
                                                </svg>
                                            )}
                                            {feature.text}
                                        </li>
                                    ))}
                                </ul>
                                <a
                                    href="#"
                                    class={`btn ${plan.featured ? "btn-gradient" : "btn-secondary"} pricing-cta`}
                                >
                                    {plan.cta}
                                </a>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section class="section faq-section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">
                        Pertanyaan <span class="text-gradient">Umum</span>
                    </h2>
                </div>
                <div class="faq-grid">
                    {
                        faqs.map((faq, index) => (
                            <div
                                class="faq-item glass"
                                style={`animation-delay: ${index * 100}ms`}
                            >
                                <h4 class="faq-question">{faq.q}</h4>
                                <p class="faq-answer">{faq.a}</p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .page-content {
        padding-top: 6rem;
    }

    .page-hero {
        padding: 4rem 0;
        text-align: center;
    }

    .page-hero .badge {
        margin-bottom: 1rem;
    }

    .page-title {
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    .page-subtitle {
        max-width: 600px;
        margin: 0 auto;
        color: var(--color-text-muted);
        font-size: 1.125rem;
        line-height: 1.7;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    /* Pricing */
    .pricing-section {
        position: relative;
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .pricing-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
            align-items: stretch;
        }
    }

    .pricing-card {
        position: relative;
        display: flex;
        flex-direction: column;
        padding: 2rem;
        border-radius: 1.5rem;
        transition: transform var(--transition-base);
    }

    .pricing-card:hover {
        transform: translateY(-4px);
    }

    .pricing-card.featured {
        border-color: rgba(var(--color-primary), 0.5);
        background: linear-gradient(
            180deg,
            rgba(var(--color-primary), 0.05),
            transparent
        );
    }

    .featured-badge {
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        padding: 0.375rem 1rem;
        font-size: 0.6875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: linear-gradient(
            135deg,
            rgb(var(--color-primary)),
            rgb(var(--color-accent))
        );
        color: white;
        border-radius: 9999px;
    }

    .pricing-header {
        margin-bottom: 1.5rem;
    }

    .plan-name {
        font-family: var(--font-display);
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .plan-desc {
        color: var(--color-text-muted);
        font-size: 0.875rem;
    }

    .pricing-price {
        display: flex;
        align-items: baseline;
        gap: 0.25rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--color-border);
    }

    .currency {
        font-size: 1rem;
        font-weight: 600;
        color: var(--color-text-muted);
    }

    .amount {
        font-size: 2.25rem;
        font-weight: 800;
        color: var(--color-text);
    }

    .period {
        font-size: 0.875rem;
        color: var(--color-text-subtle);
    }

    .pricing-features {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 2rem;
        flex: 1;
    }

    .pricing-features li {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.9375rem;
    }

    .pricing-features li.disabled {
        color: var(--color-text-subtle);
    }

    .check-icon {
        color: rgb(var(--color-primary));
    }

    .x-icon {
        color: var(--color-text-subtle);
    }

    .pricing-cta {
        width: 100%;
        text-align: center;
    }

    /* FAQ */
    .faq-section {
        border-top: 1px solid var(--color-border);
    }

    .faq-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .faq-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }
    }

    .faq-item {
        padding: 1.5rem;
        border-radius: 1rem;
    }

    .faq-question {
        font-family: var(--font-display);
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .faq-answer {
        color: var(--color-text-muted);
        font-size: 0.9375rem;
        line-height: 1.6;
    }
</style>
