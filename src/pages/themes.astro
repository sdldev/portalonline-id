---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const themes = [
    {
        name: "Modern News",
        description:
            "Desain modern dengan layout grid yang bersih untuk portal berita profesional",
        image: "https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=600&h=400&fit=crop",
        features: ["Grid Layout", "Dark Mode", "Fast Loading"],
        popular: true,
    },
    {
        name: "Magazine Style",
        description:
            "Tampilan majalah yang elegan dengan typography premium dan visual yang menarik",
        image: "https://images.unsplash.com/photo-1585829365295-ab7cd400c167?w=600&h=400&fit=crop",
        features: ["Magazine Layout", "Rich Media", "Elegant Typography"],
        popular: false,
    },
    {
        name: "Minimalist",
        description:
            "Fokus pada konten dengan desain minimalis yang meningkatkan readability",
        image: "https://images.unsplash.com/photo-1432821596592-e2c18b78144f?w=600&h=400&fit=crop",
        features: ["Clean Design", "Focus on Content", "Light Weight"],
        popular: false,
    },
    {
        name: "Tech Portal",
        description:
            "Tema futuristik untuk portal teknologi dengan efek glassmorphism",
        image: "https://images.unsplash.com/photo-1518770660439-4636190af475?w=600&h=400&fit=crop",
        features: ["Glassmorphism", "Animations", "Dark Theme"],
        popular: true,
    },
    {
        name: "Sports News",
        description:
            "Desain dinamis untuk portal berita olahraga dengan aksen warna yang bold",
        image: "https://images.unsplash.com/photo-1461896836934- voices?w=600&h=400&fit=crop",
        features: ["Dynamic Layout", "Live Scores", "Bold Colors"],
        popular: false,
    },
    {
        name: "Business Daily",
        description:
            "Tema profesional untuk berita bisnis dan ekonomi dengan charts integration",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop",
        features: ["Charts Ready", "Stock Ticker", "Professional"],
        popular: false,
    },
];

const features = [
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>`,
        title: "Responsive Design",
        desc: "Semua tema dioptimalkan untuk desktop, tablet, dan mobile",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>`,
        title: "Dark & Light Mode",
        desc: "Dukungan mode gelap dan terang sesuai preferensi pembaca",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 20h9"/><path d="M16.376 3.622a1 1 0 0 1 3.002 3.002L7.368 18.635a2 2 0 0 1-.855.506l-2.872.838a.5.5 0 0 1-.62-.62l.838-2.872a2 2 0 0 1 .506-.854z"/></svg>`,
        title: "Kustomisasi Mudah",
        desc: "Ubah warna, font, dan layout tanpa perlu coding",
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/></svg>`,
        title: "Performa Tinggi",
        desc: "Dioptimalkan untuk kecepatan loading dan SEO",
    },
];
---

<Layout title="Tema & Template | Portal Online">
    <Navbar />

    <main class="page-content">
        <!-- Hero Section -->
        <section class="page-hero">
            <div class="container">
                <span class="badge">Tema & Template</span>
                <h1 class="page-title font-display">
                    Pilih Tema Terbaik<br />
                    <span class="text-gradient">Untuk Portal Anda</span>
                </h1>
                <p class="page-subtitle">
                    Koleksi tema premium yang dirancang khusus untuk portal
                    berita. Semua tema responsif, cepat, dan mudah
                    dikustomisasi.
                </p>
            </div>
        </section>

        <!-- Theme Features -->
        <section class="section features-section">
            <div class="container">
                <div class="features-grid">
                    {
                        features.map((feature) => (
                            <div class="feature-item">
                                <div
                                    class="feature-icon"
                                    set:html={feature.icon}
                                />
                                <div class="feature-text">
                                    <h4>{feature.title}</h4>
                                    <p>{feature.desc}</p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Themes Gallery -->
        <section class="section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">
                        Galeri <span class="text-gradient">Tema</span>
                    </h2>
                    <p class="section-subtitle">
                        Pilih tema yang sesuai dengan identitas brand Anda
                    </p>
                </div>
                <div class="themes-grid">
                    {
                        themes.map((theme, index) => (
                            <div
                                class="theme-card glass"
                                style={`animation-delay: ${index * 100}ms`}
                            >
                                {theme.popular && (
                                    <div class="popular-badge">Populer</div>
                                )}
                                <div class="theme-preview">
                                    <img
                                        src={theme.image}
                                        alt={theme.name}
                                        loading="lazy"
                                    />
                                    <div class="theme-overlay">
                                        <a
                                            href="#"
                                            class="btn btn-secondary btn-sm"
                                        >
                                            Preview
                                        </a>
                                        <a
                                            href="#"
                                            class="btn btn-gradient btn-sm"
                                        >
                                            Pilih Tema
                                        </a>
                                    </div>
                                </div>
                                <div class="theme-info">
                                    <h3 class="theme-name">{theme.name}</h3>
                                    <p class="theme-desc">
                                        {theme.description}
                                    </p>
                                    <div class="theme-features">
                                        {theme.features.map((feat) => (
                                            <span class="feature-tag">
                                                {feat}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="section cta-section">
            <div class="container">
                <div class="cta-box glass">
                    <h3 class="font-display">Butuh Tema Kustom?</h3>
                    <p>
                        Tim kami siap membantu membuat tema khusus sesuai
                        kebutuhan brand Anda
                    </p>
                    <a href="/contact" class="btn btn-gradient">
                        Hubungi Kami
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M5 12h14"></path>
                            <path d="m12 5 7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .page-content {
        padding-top: 6rem;
    }

    .page-hero {
        padding: 4rem 0;
        text-align: center;
    }

    .page-hero .badge {
        margin-bottom: 1rem;
    }

    .page-title {
        font-size: clamp(2rem, 6vw, 3.5rem);
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    .page-subtitle {
        max-width: 600px;
        margin: 0 auto;
        color: var(--color-text-muted);
        font-size: 1.125rem;
        line-height: 1.7;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-header .section-subtitle {
        margin-top: 1rem;
    }

    /* Features Section */
    .features-section {
        padding-top: 2rem;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    @media (min-width: 768px) {
        .features-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .feature-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.75rem;
    }

    .feature-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary), 0.1),
            rgba(var(--color-accent), 0.1)
        );
        border: 1px solid rgba(var(--color-primary), 0.2);
        border-radius: 0.75rem;
        color: rgb(var(--color-primary));
    }

    .feature-text h4 {
        font-family: var(--font-display);
        font-size: 0.875rem;
        font-weight: 700;
    }

    .feature-text p {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        margin-top: 0.25rem;
    }

    /* Themes Grid */
    .themes-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 640px) {
        .themes-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .themes-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .theme-card {
        position: relative;
        border-radius: 1.5rem;
        overflow: hidden;
        transition:
            transform var(--transition-base),
            box-shadow var(--transition-base);
    }

    .theme-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .popular-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        z-index: 10;
        padding: 0.375rem 0.75rem;
        font-size: 0.6875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: linear-gradient(
            135deg,
            rgb(var(--color-primary)),
            rgb(var(--color-accent))
        );
        color: white;
        border-radius: 9999px;
    }

    .theme-preview {
        position: relative;
        aspect-ratio: 3/2;
        overflow: hidden;
    }

    .theme-preview img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--transition-base);
    }

    .theme-card:hover .theme-preview img {
        transform: scale(1.05);
    }

    .theme-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        background: rgba(0, 0, 0, 0.7);
        opacity: 0;
        transition: opacity var(--transition-base);
    }

    .theme-card:hover .theme-overlay {
        opacity: 1;
    }

    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.75rem;
    }

    .theme-info {
        padding: 1.5rem;
    }

    .theme-name {
        font-family: var(--font-display);
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .theme-desc {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .theme-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .feature-tag {
        padding: 0.25rem 0.625rem;
        font-size: 0.6875rem;
        font-weight: 600;
        background: rgba(var(--color-primary), 0.1);
        color: rgb(var(--color-primary));
        border-radius: 9999px;
    }

    /* CTA Section */
    .cta-section {
        padding-bottom: 4rem;
    }

    .cta-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1rem;
        padding: 3rem 2rem;
        border-radius: 2rem;
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary), 0.05),
            rgba(var(--color-accent), 0.05)
        );
    }

    .cta-box h3 {
        font-size: 1.5rem;
        font-weight: 800;
    }

    .cta-box p {
        color: var(--color-text-muted);
        max-width: 400px;
    }
</style>
